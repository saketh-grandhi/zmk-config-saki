#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&soft_off { hold-time-ms = <3000>; };

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&kp ESC    &kp N1    &kp N2    &kp N3     &kp N4    &kp N5    &kp N6     &kp N7    &kp N8    &kp N9     &kp N0    &kp MINUS  &kp EQUAL  &kp BSPC              &kp GRAVE
&kp TAB    &kp Q     &kp W     &kp E      &kp R     &kp T     &kp Y      &kp U     &kp I     &kp O      &kp P     &kp LBKT   &kp RBKT   &kp BSLH   &kp PG_UP
&kp CAPS   &kp A     &kp S     &kp D      &kp F     &kp G     &kp H      &kp J     &kp K     &kp L      &kp SEMI  &kp APOS   &kp ENTER  &kp PG_DN
&kp LSHFT            &kp Z     &kp X      &kp C     &kp V     &kp B      &kp N     &kp M     &kp COMMA  &kp DOT   &kp FSLH   &kp RSHFT             &kp UP     &kp DEL
&kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE  &kp RALT  &kp RGUI  &kp RCTRL  &kp LEFT  &kp DOWN  &kp RIGHT
            >;
        };

        bt_layer {
            display-name = "Bluetooth";
            bindings = <
&bt BT_CLR_ALL  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans
&trans          &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans          &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans                        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans  &trans
&trans          &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        extra1 { status = "reserved"; };

        extra2 { status = "reserved"; };
    };
};
